---
type Props = {
  title?: string;
};
const { title } = Astro.props;
---

<section
  class="flex flex-col items-center justify-center border-b border-t border-dashed border-gray-200 py-16 text-center sm:py-20"
>
  <div class="flex flex-col items-center gap-y-11 sm:gap-y-14">
    {
      title && (
        <h1 class="font-montserrat-alternates text-4xl font-bold text-gray-700 sm:text-5xl">
          {title}
        </h1>
      )
    }
    <slot />
  </div>
</section>
