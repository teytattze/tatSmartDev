---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Section from "../components/Section.astro";

type Role = {
  title: string;
  location: string;
  startDate: string;
  endDate?: string;
};

type Experience = {
  companyName: string;
  roles: Role[];
};

type Contact = {
  iconSrc: string;
  link: string;
  displayText: string;
};

const experiences = [
  {
    companyName: "Ocado Technology",
    roles: [
      {
        title: "Software Engineer II",
        location: "London, UK",
        startDate: "Jun 2023",
      },
      {
        title: "Software Engineer I",
        location: "London, UK",
        startDate: "Aug 2022",
        endDate: "Jun 2023",
      },
    ],
  },
  {
    companyName: "Superprof",
    roles: [
      {
        title: "Coding Mentor (Freelance)",
        location: "London, UK",
        startDate: "Mar 2022",
        endDate: "May 2022",
      },
    ],
  },
  {
    companyName: "Setel Ventures",
    roles: [
      {
        title: "Full-stack Web Engineer (Intern)",
        location: "Petaling Jaya, Malaysia",
        startDate: "Apr 2021",
        endDate: "Aug 2021",
      },
    ],
  },
] satisfies Experience[];

const contacts = [
  {
    iconSrc: "/images/email.svg",
    link: "mailto:tattzetey@gmail.com",
    displayText: "tattzetey@gmail.com",
  },
  {
    iconSrc: "/images/github.svg",
    link: "https://github.com/teytattze",
    displayText: "https://github.com/teytattze",
  },
  {
    iconSrc: "/images/linkedIn.svg",
    link: "https://www.linkedin.com/in/tattzetey",
    displayText: "https://www.linkedin.com/in/tattzetey",
  },
] satisfies Contact[];
---

<Layout title="tatSmartDev - Home">
  <Container>
    <Navbar />
    <main>
      <Section>
        <div class="flex flex-col items-center gap-y-6 sm:gap-y-8">
          <img
            class="inline-block h-16 w-16 rounded-full sm:h-20 sm:w-20"
            src="/images/picture.png"
            alt="Liam's picture"
          />
          <div class="flex flex-col items-center gap-y-1.5 sm:gap-y-2.5">
            <h1
              class="font-montserrat-alternates text-4xl font-bold text-gray-700 sm:text-5xl"
            >
              Liam Tat Tze Tey
            </h1>
            <h2
              class="font-montserrat-alternates text-2xl font-bold text-gray-500 sm:text-3xl"
            >
              Software Engineer
            </h2>
          </div>
          <p class="font-montserrat text-base text-gray-700 sm:text-lg">
            I'm a passionate software engineer based in London, UK, fueled by an
            insatiable curiosity for learning and a profound affinity for
            problem-solving. I dedicate my free time to refining my
            problem-solving skills and staying at the forefront of emerging
            technologies. Equally, I find immense joy in sharing my knowledge,
            mentoring, and providing value to others. My unswerving commitment
            to continuous growth in the field of software engineering drives my
            relentless pursuit of excellence.
          </p>
        </div>
      </Section>
      <Section title="Experiences">
        <div class="flex flex-col gap-y-14 sm:gap-y-16">
          {
            experiences.map((experience) => (
              <div class="flex flex-col items-center justify-center gap-y-1.5 sm:gap-y-2">
                <h2 class="font-montserrat text-xl font-bold text-gray-700 sm:text-2xl">
                  {experience.companyName}
                </h2>
                {experience.roles.map((role, index) => (
                  <>
                    <div class="flex flex-col gap-y-0.5 sm:gap-y-1">
                      <h3 class="font-montserrat text-lg font-medium text-gray-700 sm:text-xl">
                        {role.title}
                      </h3>
                      <p class="font-montserrat text-sm font-semibold text-gray-500 sm:text-base">
                        {role.location} &#124; {role.startDate} -{" "}
                        {role.endDate ?? "Present"}
                      </p>
                    </div>
                    {index !== experience.roles.length - 1 && (
                      <img
                        class="w-1 py-1"
                        src="/images/3circles.svg"
                        alt="divider"
                      />
                    )}
                  </>
                ))}
              </div>
            ))
          }
        </div>
      </Section>
      <Section title="Get in Touch">
        <div class="flex flex-col gap-y-2.5 sm:gap-y-3">
          {
            contacts.map((contact) => (
              <div class="flex flex-row items-center justify-center gap-x-2 sm:gap-x-3">
                <img
                  class="inline-block w-5 sm:w-6"
                  src={contact.iconSrc}
                  alt={contact.displayText}
                />
                <a
                  href={contact.link}
                  class="text-ellipsis font-montserrat text-base font-medium text-gray-700 hover:underline sm:text-lg"
                >
                  {contact.displayText}
                </a>
              </div>
            ))
          }
        </div>
      </Section>
    </main>
  </Container>
</Layout>
